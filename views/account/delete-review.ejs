<style>
    .delete-review-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .delete-review-container h1 {
        color: #dc3545;
        margin-bottom: 20px;
    }

    .warning-message {
        background-color: #fff3cd;
        border: 1px solid #ffc107;
        color: #856404;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .vehicle-info {
        background: white;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
        border-left: 4px solid #dc3545;
    }

    .vehicle-info h3 {
        color: #dc3545;
        margin: 0 0 10px 0;
    }

    .review-preview {
        background: white;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .review-rating {
        color: #FFB800;
        font-size: 1.2em;
        margin-bottom: 10px;
        display: block;
    }

    .review-text {
        color: #333;
        line-height: 1.6;
        font-style: italic;
    }

    .form-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-delete,
    .btn-cancel {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }

    .btn-cancel:hover {
        background-color: #5a6268;
    }

    .notice {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        padding: 12px;
        border-radius: 4px;
        margin-bottom: 20px;
    }
</style>

<div class="delete-review-container">
    <h1><%= title %></h1>
    
    <% if (locals.notice) { %>
        <p class="notice"><%= Array.isArray(locals.notice) ? locals.notice.join(', ') : locals.notice %></p>
    <% } %>

    <div class="warning-message">
        ⚠️ Are you sure you want to delete this review? This action cannot be undone.
    </div>

    <div class="vehicle-info">
        <h3><%= inv_year %> <%= inv_make %> <%= inv_model %></h3>
    </div>

    <div class="review-preview">
        <span class="review-rating">
            <% for(let i = 0; i < review_rating; i++) { %>★<% } %>
            <% for(let i = 0; i < 5 - review_rating; i++) { %>☆<% } %>
            (<%= review_rating %>/5)
        </span>
        <p class="review-text">"<%= review_text %>"</p>
    </div>

    <form action="/review/delete" method="post">
        <input type="hidden" name="review_id" value="<%= review_id %>">
        
        <div class="form-actions">
            <a href="/account/reviews" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-delete">Delete Review</button>
        </div>
    </form>
</div>
